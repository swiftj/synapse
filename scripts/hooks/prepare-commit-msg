#!/bin/bash
# Prepare-commit-msg hook
#
# Reserved for future commit message formatting.
# Version keyword parsing ([minor], [major], [skip-version]) is handled
# directly by the pre-commit hook via .git/COMMIT_EDITMSG.
#
# Install: Run ./scripts/install-hooks.sh
# Location: scripts/hooks/prepare-commit-msg

# Clean up any stale VERSION_BUMP_TYPE files from old hook versions
rm -f ".git/VERSION_BUMP_TYPE"
